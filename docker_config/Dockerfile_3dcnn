# Install dependencies of NVFlare at defined versions
RUN python3 -m pip install \
    Flask==3.0.2 \
    Flask-JWT-Extended==4.6.0 \
    Flask-SQLAlchemy==3.1.1 \
    PyJWT==2.8.0 \
    SQLAlchemy==2.0.16 \
    Werkzeug==3.0.1 \
    blinker==1.8.2 \
    docker==7.1.0 \
    greenlet==3.0.3 \
    grpcio==1.62.1 \
    gunicorn==22.0.0 \
    itsdangerous==2.2.0 \
    msgpack==1.0.8 \
    protobuf==4.24.4 \
    psutil==6.0.0 \
    pyhocon==0.3.61 \
    websockets==12.0

# Install NVFlare from the local source and nvflare-nightly (not at fixed version)
# (Assuming you have your modified nvflare source code in a local directory named 'nvflare')
WORKDIR /workspace/
COPY ./docker_config/NVFlare /workspace/nvflare
RUN python3 -m pip install \
    /workspace/nvflare \
    nvflare-nightly
RUN rm -rf /workspace/nvflare

# Install the controller package
COPY ./controller /workspace/controller
RUN python3 -m pip install /workspace/controller
RUN rm -rf /workspace/controller

# Copy source code to image
COPY . /MediSwarm

# install git and dependencies at fixed version (TODO think about whether this is worth the installation just for being able to run git clean below
RUN apt update
RUN apt install -y perl-modules-5.34=5.34.0-3ubuntu1.3 libgdbm6=1.23-1 libgdbm-compat4=1.23-1 libperl5.34=5.34.0-3ubuntu1.3 perl=5.34.0-3ubuntu1.3 less=590-1ubuntu0.22.04.3 libmd0=1.0.4-1build1 libbsd0=0.11.5-1 libexpat1=2.4.7-1ubuntu0.5 netbase=6.3 libcbor0.8=0.8.0-2ubuntu1 libedit2=3.1-20210910-1build1 libfido2-1=1.10.0-1 libnghttp2-14=1.43.0-1ubuntu0.2 libpsl5=0.21.0-1.2build2 libxau6=1:1.0.9-1build5 libxdmcp6=1:1.1.3-0ubuntu5 libxcb1=1.14-3ubuntu3 libx11-data=2:1.7.5-1ubuntu0.3 libx11-6=2:1.7.5-1ubuntu0.3 libxext6=2:1.3.4-1build1 libxmuu1=2:1.1.3-3 openssh-client=1:8.9p1-3ubuntu0.10 publicsuffix=20211207.1025-1 xauth=1:1.1-1build2 libbrotli1=1.0.9-2build6 libsasl2-modules-db=2.1.27+dfsg2-3ubuntu1.2 libsasl2-2=2.1.27+dfsg2-3ubuntu1.2 libldap-2.5-0=2.5.18+dfsg-0ubuntu0.22.04.2 librtmp1=2.4+20151223.gitfa8646d.1-2build4 libssh-4=0.9.6-2ubuntu0.22.04.3 libcurl3-gnutls=7.81.0-1ubuntu1.20 liberror-perl=0.17029-1 git-man=1:2.34.1-1ubuntu1.12 git=1:2.34.1-1ubuntu1.12 libldap-common=2.5.18+dfsg-0ubuntu0.22.04.2 libsasl2-modules=2.1.27+dfsg2-3ubuntu1.2 patch=2.7.6-7build2

RUN cd /MediSwarm && git clean -f .

# uninstall git and dependencies installed above
RUN apt remove -y perl-modules-5.34 libgdbm6 libgdbm-compat4 libperl5.34 perl less libmd0 libbsd0 libexpat1 netbase libcbor0.8 libedit2 libfido2-1 libnghttp2-14 libpsl5 libxau6 libxdmcp6 libxcb1 libx11-data libx11-6 libxext6 libxmuu1 openssh-client publicsuffix xauth libbrotli1 libsasl2-modules-db libsasl2-2 libldap-2.5-0 librtmp1 libssh-4 libcurl3-gnutls liberror-perl git-man git libldap-common libsasl2-modules patch

# Set the Docker image name
LABEL name="nvflare-pt-dev:3dcnn"
