    torchio==0.19.6 \
    seaborn==0.12.2 \
    timm==0.9.16 \
    SimpleITK==2.2.1 \
    pydicom==2.4.4 \
    monai==1.3.0 \
    tensorboard==2.12.1 \
    Deprecated==1.2.14 \
    absl-py==2.1.0 \
    aiohttp==3.9.5 \
    aiosignal==1.3.1 \
    async-timeout==4.0.3 \
    cachetools==5.3.3 \
    contourpy==1.2.1 \
    cycler==0.12.1 \
    et-xmlfile==1.1.0 \
    fonttools==4.53.1 \
