    google-auth==2.31.0 \
    google-auth-oauthlib==1.0.0 \
    grpcio==1.64.1 \
    huggingface_hub==0.23.4 \
    humanize==4.9.0 \
    joblib==1.4.2 \
    kiwisolver==1.4.5 \
    lightning-utilities==0.11.3.post0 \
    markdown==3.6 \
    markdown-it-py==3.0.0 \
    mdurl==0.1.2 \
    multidict==6.0.5 \
    nibabel==5.2.1 \
    oauthlib==3.2.2 \
    pandas==2.2.2 \
    pyasn1==0.6.0 \
    pyasn1-modules==0.4.0 \
    pyparsing==3.0.9 \
    python-dateutil==2.9.0.post0 \
    requests-oauthlib==2.0.0 \
    rich==13.7.1 \
    rsa==4.9 \
    safetensors==0.4.3 \
    scipy==1.14.0 \
